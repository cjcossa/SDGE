@model SDGE.UI.Web.Models.ParticipanteViewModel

@{
    ViewData["Title"] = "Details";
}

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="material-icons">close</i>
                    </button>
                    <span>
                        <b> Sucesso - </b> @ViewBag.Alert
                    </span>
                </div>
            }
            <div class="card ">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Dados Pessoais</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Ocupacao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Ocupacao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Instituicao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Instituicao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Telefone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Telefone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TituloAcademico)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TituloAcademico)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <button onclick="location.href='@Url.Action("Edit")'" class="btn btn-outline-success btn-sm">
                        <i class="material-icons">edit</i>
                        Alterar
                    </button>
                </div>
            </div>
        </div>
    </div>