@model SDGE.UI.Web.Models.ParticipanteViewModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Alterar Dados Pessoais</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ParticipanteId" />
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Nome" class="bmd-label-floating"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="bmd-label-floating"></label>
                                    <input asp-for="Email" class="form-control" disabled />
                                    <input type="hidden" asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Telefone" class="bmd-label-floating"></label>
                                    <input asp-for="Telefone" class="form-control" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Instituicao" class="bmd-label-floating"></label>
                                    <input asp-for="Instituicao" class="form-control" />
                                    <span asp-validation-for="Instituicao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Ocupacao" class="bmd-label-floating"></label>
                                    <input asp-for="Ocupacao" class="form-control" />
                                    <span asp-validation-for="Ocupacao" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TituloAcademico" class="bmd-label-floating"></label>
                                    <input asp-for="TituloAcademico" class="form-control" />
                                    <span asp-validation-for="TituloAcademico" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                       
                        <div class="form-group text-right">
                            <a asp-action="Show">
                                <input type="button" value="Cancelar" class="btn btn-primary btn-sm waves-effect" />
                            </a>

                            <button type="submit" class="btn btn-outline-primary btn-sm">Guardar</button>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
