@model IEnumerable<SDGE.ApplicationCore.Entity.Participante>

@{
    ViewData["Title"] = "Index";
}

<div id="modalView" class="col-md-12"></div>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Alert != null)
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
                <span>
                    <b> Sucesso - </b> @ViewBag.Alert
                </span>
            </div>
        }
        <button onclick="location.href='@Url.Action("Create")'" class="btn btn-outline-primary btn-sm">Registar</button>
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Participante</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="dtMaterialDesignExample">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ocupacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Instituicao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TituloAcademico)
                                </th>
                                 <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ocupacao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Instituicao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TituloAcademico)
                                    </td>
                                    <td class="td-actions text-right">
                                        <button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.ParticipanteId })'" rel="tooltip" title="Editar" class="btn btn-primary btn-link btn-sm">
                                            <i class="material-icons">edit</i>
                                        </button>
                                        <button type="button" onclick="location.href='@Url.Action("Details", new { id = item.ParticipanteId })'" rel="tooltip" title="Detalhes" class="btn btn-success btn-link btn-sm">
                                            <i class="material-icons">details</i>
                                        </button>
                                        <button type="button" data-toggle="ajax-modal" data-target="#modalConfirmDelete" data-url="@Url.Action($"Delete/{item.ParticipanteId}")" rel="tooltip" title="Remover" class="btn btn-danger btn-link btn-lg">
                                            <i class="material-icons">remove</i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
