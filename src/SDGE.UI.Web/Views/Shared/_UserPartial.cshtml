                                }*/
                            }
                            else
                            {
                                foreach (var item in _alerta.ObterPorParticipante(id))
                                {
                                    ViewData["Id"] = item.AlertaId;
                                    if (item.Tipo.Equals("Inscricao"))
                                    {
                                        ViewData["Controller"] = "EventoParticipante";
                                        ViewData["Action"] = "Listar";
                                    }
                                    else if (item.Tipo.Equals("Submissao"))
