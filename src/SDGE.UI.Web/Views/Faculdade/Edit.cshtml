@model SDGE.UI.Web.Models.FaculdadeViewModel

@{
    ViewData["Title"] = "Alterar Faculdade";
}



<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card card-chart">
            <div class="card-header card-header-primary">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="FaculdadeId" />
                            <div class="form-group">
                                <label asp-for="Designacao" class="bmd-label-floating"></label>
                                <input asp-for="Designacao" class="form-control" />
                                <span asp-validation-for="Designacao" class="text-danger"></span>
                            </div>
                            <div class="form-group text-right">
                                <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-outline-danger btn-sm">
                                    <i class="material-icons">close</i>
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-outline-success btn-sm">
                                    <i class="material-icons">done</i>
                                    Guardar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

