@using SDGE.ApplicationCore.Interfaces.Repository;
@using Microsoft.AspNetCore.Http;

@inject IMembroCientificoRepository Cientifico;
@inject IHttpContextAccessor HttpContextAccessor

@model IEnumerable<SDGE.ApplicationCore.Entity.ComissaoCientifica>

@{
    ViewData["Title"] = "Lista de Comissões Científica";
    bool state = false;
    int id = -1;

    if (HttpContextAccessor.HttpContext.Session.GetString("_Membro") != null)
    {
        id = int.Parse(HttpContextAccessor.HttpContext.Session.GetString("_Membro"));

        if (Cientifico.ObterPorMembro(id).Any())
            state = true;
    }
}

    <div class="row">
        <div id="modalView" class="col-md-12"></div>
        <div class="col-md-12">
            @if (ViewBag.Alert != null)
            {
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="material-icons">close</i>
                    </button>
                    <span>
                         @ViewBag.Alert
                    </span>
                </div>
            }
            <div class="text-sm-left">

                @if (HttpContextAccessor.HttpContext.Session.GetString("_Organizador") != null)
                {
                 <button type="button" onclick="location.href='@Url.Action("Criar")'" class="btn btn-outline-success btn-sm">
                    <i class="material-icons">group_add</i>
                    Nova Comissão
                 </button>
                }
               
                <button type="button" onclick="location.href='@Url.Action("Participar")'" class="btn btn-outline-success btn-sm">
                    <i class="material-icons">keyboard</i>
                    Participar
                </button>
            </div>
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">

                    <table class="table" id="dtMaterialDesignExample">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td class="td-actions text-right">
                                    @if (state || item.CriadoPorId == id)
                                    {
                                        <button type="button" onclick="location.href='@Url.Action("Listar", new { id = item.ComissaoCientificaId })'" rel="tooltip" title="Detalhes" class="btn btn-info btn-link btn-lg">
                                            <i class="material-icons">details</i>
                                        </button>
                                    }

                                    @if (item.CriadoPorId == id)
                                    {
                                        <button type="button" onclick="location.href='@Url.Action("Adicionar", new { id = item.ComissaoCientificaId })'" rel="tooltip" title="Adicionar" class="btn btn-success btn-link btn-lg">
                                            <i class="material-icons">add</i>
                                        </button>
                                        <button type="button" onclick="location.href='@Url.Action("Confirmar", new { id = item.ComissaoCientificaId })'" rel="tooltip" title="Confirmar" class="btn btn-success btn-link btn-lg">
                                            <i class="material-icons">done</i>
                                        </button>
                                        <button type="button" data-toggle="ajax-modal" data-target="#modalConfirmDelete" data-url="@Url.Action($"Remover/{item.ComissaoCientificaId}")" rel="tooltip" title="Apagar" class="btn btn-danger btn-link btn-lg">
                                            <i class="material-icons">delete_outline</i>
                                        </button>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

