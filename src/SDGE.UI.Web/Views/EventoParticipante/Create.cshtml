@model SDGE.UI.Web.Models.InscricaoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Nova Inscrição</h4>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-file-upload ">
                                <label asp-for="File" class="control-label"></label>
                                <div class="custom-file btn btn-outline-primary col-sm-12 btn-sm">
                                    <input asp-for="File" class="text-primary custom-file-input" />
                                    <label class="custom-file-label text-left">Seleccione o comprovativo de pagamento</label>
                                </div>
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EventoId" class="control-label"></label>
                                <select asp-for="EventoId" class="form-control selectpicker" title="Seleccione o evento" data-style="btn-outline-primary" asp-items="ViewBag.EventoId"></select>
                                <span asp-validation-for="EventoId" class="text-danger"></span>
                            </div>
                            <div class="form-group text-right">
                                <button type="button" onclick="location.href='@Url.Action("Listar")'" class="btn btn-outline-danger btn-sm">
                                    <i class="material-icons">close</i>
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-outline-success btn-sm">
                                    <i class="material-icons">done</i>
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

