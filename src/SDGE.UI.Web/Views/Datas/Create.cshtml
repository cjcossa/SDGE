@model SDGE.UI.Web.Models.DatasViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Configurações</h4>
                <p class="card-category">Evento: @Html.DisplayFor(model => model.Titulo)</p>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventoId" />
                    <div class="form-group">
                        <select asp-for="Finalidade" class="selectpicker" data-style="btn-outline-primary" title="Seleccione a Finalidade" data-width="100%" asp-items="(List<SelectListItem>)ViewBag.Finalidade"></select>
                        <span asp-validation-for="Finalidade" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DataInicio" class="bmd-label-floating"></label>
                                <input name="datainicio" asp-for="DataInicio" id="datainicio" class="form-control" autocomplete="off" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DataFim" class="bmd-label-floating"></label>
                                <input name="datafim" asp-for="DataFim" id="datafim" class="form-control" autocomplete="off" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="bmd-label-floating"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group text-right">
                        <button type="button" onclick="location.href='@Url.Action("Index", new { id = Model.EventoId})'" class="btn btn-outline-danger btn-sm">
                            <i class="material-icons">close</i>
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <i class="material-icons">done</i>
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
    $('#datainicio').datepicker({
        showOtherMonths: true,
        minDate: today,
        maxDate: function () {
            return $('#datafim').val();
        }
    });
    $('#datafim').datepicker({
        showOtherMonths: true,
        minDate: function () {
            return $('#datainicio').val();
        }
    });
</script>
