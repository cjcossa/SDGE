@using SDGE.ApplicationCore.Interfaces.Repository;
@inject IDataImportanteRepository _datas;
@model SDGE.UI.Web.Models.EventoViewModel

@{
    ViewData["Title"] = "Details";
    var _result = _datas.ObterPorEvento(Model.EventoId);
}
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="card card-chart">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Detalhes</h4>
                        <p class="card-category">Título do Evento: @Html.DisplayFor(model => model.Titulo)</p>
                    </div>
                    <div class="card-body">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Lema)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Lema)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Email)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DataInicio)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DataInicio)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DataFim)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DataFim)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Local)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Local)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Categoria)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Categoria)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Descricao)
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" onclick="location.href='@Url.Action("Eventos")'" class="btn btn-outline-info btn-sm">
                            <i class="material-icons">home</i>
                            Home
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in _result)
                {
                    <div class="col-md-4">
                        <div class="card card-chart">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">@item.Finalidade</h4>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-6">
                                        Data de Início
                                    </dt>
                                    <dd class="col-sm-6">
                                        @item.DataInicio
                                    </dd> 
                                    <dt class="col-sm-6">
                                        Data de Término
                                    </dt>
                                    <dd class="col-sm-6">
                                        @item.DataFim
                                    </dd> 
                                    <dt class="col-sm-6">
                                        Descrição
                                    </dt>
                                    <dd class="col-sm-6">
                                        @item.Descricao
                                    </dd>
                                </dl>
                            </div>
                            <div class="card-footer">
                                <b>Datas Importantes</b>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

