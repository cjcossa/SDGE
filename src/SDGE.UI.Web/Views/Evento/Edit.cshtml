@model SDGE.UI.Web.Models.EventoViewModel

@{
    ViewData["Title"] = "Actualizar Evento";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventoId" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Titulo" class="bmd-label-floating"></label>
                                <input asp-for="Titulo" class="form-control" disabled />
                                <input type="hidden" asp-for="Titulo" class="form-control" />
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Lema" class="bmd-label-floating"></label>
                                <input asp-for="Lema" class="form-control" />
                                <span asp-validation-for="Lema" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="DataInicio" class="bmd-label-floating"></label>
                                <input name="datainicio" asp-for="DataInicio" id="datainicio" class="form-control" autocomplete="off" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="DataFim" class="bmd-label-floating"></label>
                                <input name="datafim" asp-for="DataFim" id="datafim" class="form-control" autocomplete="off" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Local" class="bmd-label-floating"></label>
                                <input asp-for="Local" class="form-control" />
                                <span asp-validation-for="Local" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <select asp-for="Categoria" class="selectpicker" data-style="btn-outline-primary" data-width="100%" asp-items="(List<SelectListItem>)ViewBag.Categoria"></select>
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Email" class="bmd-label-floating"></label>
                                <input asp-for="Email" class="form-control" disabled/>
                                <input type="hidden" asp-for="Email" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CodigoOrganizadora" class="bmd-label-floating"></label>
                                <input asp-for="CodigoOrganizadora" class="form-control" />
                                <span asp-validation-for="CodigoOrganizadora" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CodigoCientifica" class="bmd-label-floating"></label>
                                <input asp-for="CodigoCientifica" class="form-control" />
                                <span asp-validation-for="CodigoCientifica" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="Descricao" class="bmd-label-floating"></label>
                                    <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-outline-danger btn-sm">
                            <i class="material-icons">close</i>
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <i class="material-icons">done</i>
                            Guardar
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
    $('#datainicio').datepicker({
        showOtherMonths: true,
        minDate: today,
        maxDate: function () {
            return $('#datafim').val();
        }
    });
    $('#datafim').datepicker({
        showOtherMonths: true,
        minDate: function () {
            return $('#datainicio').val();
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
