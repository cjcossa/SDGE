@model SDGE.ApplicationCore.Entity.Evento

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-1"></div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Criar Evento</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Titulo" class="bmd-label-floating"></label>
                                    <input asp-for="Titulo" class="form-control" />
                                    <span asp-validation-for="Titulo" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Lema" class="bmd-label-floating"></label>
                                    <input asp-for="Lema" class="form-control" />
                                    <span asp-validation-for="Lema" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DataInicio" class="bmd-label-floating"></label>
                                    <input name="datainicio" asp-for="DataInicio" id="datainicio" class="form-control" />
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                    <script>
                                        var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
                                        $('#datainicio').datepicker({
                                            showOtherMonths: true,
                                            minDate: today,
                                            maxDate: function () {
                                                return $('#datafim').val();
                                            }
                                        });
                                    </script>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DataFim" class="bmd-label-floating"></label>
                                    <input name="datafim" asp-for="DataFim" id="datafim" class="form-control" />
                                    <span asp-validation-for="DataFim" class="text-danger"></span>
                                    <script>
                                        $('#datafim').datepicker({
                                            showOtherMonths: true,
                                            minDate: function () {
                                                return $('#datainicio').val();
                                            }
                                        });
                                    </script>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="Categoria" class="selectpicker" data-style="btn-primary" asp-items="(List<SelectListItem>)ViewBag.Categoria"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Local" class="bmd-label-floating"></label>
                                    <input asp-for="Local" class="form-control" />
                                    <span asp-validation-for="Local" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="bmd-label-floating"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label asp-for="Descricao" class="bmd-label-floating"></label>
                                        <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Create</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
