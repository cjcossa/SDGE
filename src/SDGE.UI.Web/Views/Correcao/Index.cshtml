@model IEnumerable<SDGE.ApplicationCore.Entity.Correcao>

@{
    ViewData["Title"] = "Index";
    bool state = false;
}


<div id="modalView" class="col-md-12"></div>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Alert != null)
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
                <span>
                    <b> Sucesso - </b> @ViewBag.Alert
                </span>
            </div>
        }
        
        <div class="card">
            <div class="card-header card-header-primary">
                <h4>Lista de Avaliações</h4>
                @foreach (var item in Model)
                {
                    if (item.CorrecaoId.ToString() != null)
                    {
                        state = true;
                        <p class="card-category">Submissão: @Html.DisplayFor(modelItem => item.Submissao.Titulo)</p>break;
                    }
                }

            </div>
            <div class="card-body">

                <table class="table" id="dtMaterialDesignExample">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Submissao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Membro)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Submissao.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Membro.Nome)
                            </td>
                            <td class="td-actions text-right">
                                <button type="button" onclick="location.href='@Url.Action("Download", new { id = item.CorrecaoId })'" rel="tooltip" title="Baixar" class="btn btn-success btn-link btn-sm">
                                    <i class="material-icons">archive</i>
                                </button>
                                <button type="button" onclick="location.href='@Url.Action("Edit", new { id = item.CorrecaoId })'" rel="tooltip" title="Alterar" class="btn btn-success btn-link btn-sm">
                                    <i class="material-icons">edit</i>
                                </button>
                                <button type="button" data-toggle="ajax-modal" data-target="#modalConfirmDelete" data-url="@Url.Action($"Details/{item.CorrecaoId}")" rel="tooltip" title="Detalhes" class="btn btn-info btn-link btn-lg">
                                    <i class="material-icons">details</i>
                                </button>
                                <button type="button" data-toggle="ajax-modal" data-target="#modalConfirmDelete" data-url="@Url.Action($"Delete/{item.CorrecaoId}")" rel="tooltip" title="Remover" class="btn btn-info btn-link btn-lg">
                                    <i class="material-icons">remove</i>
                                </button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
