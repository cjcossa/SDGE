@model SDGE.UI.Web.Models.CorrecaoViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Alterar Avaliação</h4>
                <p class="card-category ">Submissão: @Html.DisplayFor(model => model.Titulo)</p>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SubmissaoId" />
                    <input type="hidden" asp-for="CorrecaoId" />
                    <input type="hidden" asp-for="Ficheiro" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-file-upload ">
                                <label asp-for="File" class="control-label"></label>
                                <div class="custom-file btn btn-outline-primary col-sm-12 btn-sm">
                                    <input asp-for="File" class="text-primary custom-file-input" />
                                    <label class="custom-file-label text-left">@ViewBag.Ficheiro</label>
                                </div>
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="Observacoes" class="bmd-label-floating"></label>
                                <textarea asp-for="Observacoes" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Observacoes" class="text-danger"></span>
                            </div>
                            <div class="form-group text-right">
                                <button type="button" onclick="location.href='@Url.Action("Index", new { id = Model.SubmissaoId })'" class="btn btn-outline-danger btn-sm">
                                    <i class="material-icons">close</i>
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-outline-success btn-sm">
                                    <i class="material-icons">done</i>
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
