@model IEnumerable<SDGE.ApplicationCore.Entity.ComissaoOrganizadora>

@{
    ViewData["Title"] = "Index";
}

<div id="modalView" class="col-md-12"></div>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Alert != null)
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
                <span>
                    <b> Sucesso - </b> @ViewBag.Alert
                </span>
            </div>
        }
            <div class="text-sm-left">
                <button onclick="location.href='@Url.Action("Criar")'" class="btn btn-outline-primary btn-sm">Criar</button>
                <button onclick="location.href='@Url.Action("Participar")'" class="btn btn-outline-primary btn-sm">Participar</button>
            </div>
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Comissão Organizadora</h4>
                    <p class="card-category">Comissao responsavel pelo controlo total do sistema</p>
                </div>
                <div class="card-body">

                    <table class="table" id="dtMaterialDesignExample">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Codigo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Codigo)
                                    </td>
                                    <td class="td-actions text-right">
                                        <button type="button" onclick="location.href='@Url.Action("Adicionar", new { id = item.ComissaoOrganizadoraId })'" rel="tooltip" title="Adicionar" class="btn btn-success btn-link btn-lg">
                                            <i class="material-icons">add</i>
                                        </button>
                                        <button type="button" onclick="location.href='@Url.Action("Listar", new { id = item.ComissaoOrganizadoraId })'" rel="tooltip" title="Detalhes" class="btn btn-success btn-link btn-lg">
                                            <i class="material-icons">details</i>
                                        </button>
                                        <button type="button" data-toggle="ajax-modal" data-target="#modalConfirmDelete" data-url="@Url.Action($"Remover/{item.ComissaoOrganizadoraId}")" rel="tooltip" title="Apagar" class="btn btn-danger btn-link btn-lg">
                                            <i class="material-icons">delete_outline</i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

